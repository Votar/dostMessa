<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="@dimen/user_pic_size"
            android:layout_height="@dimen/user_pic_size"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/account_user_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/account_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Silvester Stalnom"
            android:textColor="@color/colorFont" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/double_screen_padding"
            android:paddingRight="@dimen/double_screen_padding"
            android:text="@string/ui_edit"
            android:id="@+id/profile_btn_edit" />

        <android.support.design.widget.TabLayout
            android:id="@+id/account_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

        <entrego.com.entrego.util.ui.NoSwipeableViewPager
            android:id="@+id/account_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
