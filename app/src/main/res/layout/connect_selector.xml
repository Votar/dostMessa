<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="route"
            type="entrego.com.android.storage.model.EntregoRouteModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="@{route == null? View.VISIBLE: View.GONE}"
        app:layout_collapseParallaxMultiplier="1.0">

        <Switch
            android:id="@+id/home_switch_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:showText="true"
            android:switchMinWidth="0dp"
            android:textOff="@string/disconnected"
            android:textOn="@string/connected"
            android:thumb="@drawable/switch_thumb"
            android:thumbTextPadding="@dimen/double_screen_padding"
            android:track="@drawable/switch_track"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />
    </LinearLayout>

</layout>