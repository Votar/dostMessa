<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="report"
            type="entrego.com.android.ui.account.help.reports.model.ReportModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_report_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="entrego.com.android.ui.account.help.reports.create.ReportSendMessageActivity">

        <ScrollView
            android:clipToPadding="false"
            android:paddingBottom="@dimen/padding_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/report_send_status_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTomato">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small_text_padding"
                        android:text="@{report.status}"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite" />
                </FrameLayout>

                <TextView
                    android:id="@+id/report_send_timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_screen_padding"
                    android:text="@{report.timestamp}" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/default_screen_padding">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:srcCompat="@drawable/ic_user_profile_80dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/padding_medium"
                                android:text="@string/debug_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                            <EditText
                                android:layout_margin="@dimen/padding_medium"
                                style="@style/DefaultEditText"
                                android:minLines="5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <Button
                                android:layout_margin="@dimen/default_screen_padding"
                                android:text="@string/ui_send"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>


        <include
            android:id="@+id/report_send_toolbar"
            layout="@layout/navigation_toolbar" />
    </RelativeLayout>

</layout>

