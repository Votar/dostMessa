<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/default_screen_padding"
    android:paddingRight="@dimen/default_screen_padding"
    android:paddingTop="@dimen/padding_small">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/score_total_delivery_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="1253"
            android:textColor="@color/colorDarkBlue"
            android:textSize="@dimen/tsize_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_total_delivery_value"
            android:layout_centerHorizontal="true"
            android:text="@string/completed_services"
            android:textAlignment="center" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/score_total_declined_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="86%"
            android:textColor="@color/colorDarkBlue"
            android:textSize="@dimen/tsize_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_total_declined_value"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/accepted_services"
            android:textAlignment="center" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/score_total_cnceled_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="10%"
            android:textColor="@color/colorDarkBlue"
            android:textSize="@dimen/tsize_medium" />

        <TextView
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_total_cnceled_value"
            android:layout_centerHorizontal="true"
            android:text="@string/canceled_services" />
    </RelativeLayout>

</LinearLayout>
